<h1>Listing staffs</h1>

<div class="staff">
  <div class = "staff body">
    <table class = "table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>School</th>
      <th>Displayname</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.name %></td>
        <td><%= staff.school %></td>
        <td><%= staff.displayname %></td>
        <td><%= staff.grade %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>
<h3> Import Teachers</h3>
<%= form_tag import_staffs_path, multipart: true do %>
<%= file_field_tag :file %>
<%= submit_tag "Upload Teachers" %>
<%end %>


<%= link_to 'New Staff', new_staff_path %>
